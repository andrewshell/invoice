{
    "name": "andrewshell/invoice",
    "type": "project",
    "description": "Simple Invoice Generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Shell",
            "email": "andrew@andrewshell.org"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "radar/adr": "~1.0",
        "relay/middleware": "~1.0",
        "zendframework/zend-diactoros": "~1.0",
        "symfony/yaml": "^3.0",
        "twig/twig": "^1.23"
    },
    "require-dev": {
        "phpunit/phpunit": "5.1.*",
        "squizlabs/php_codesniffer": "2.5.*"
    },
    "autoload": {
        "psr-4": {
            "Cadre\\": "src/Cadre/",
            "Invoice\\": "src/Invoice/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Invoice\\": "tests/Invoice/",
            "Aura\\Di\\": "vendor/aura/di/tests/"
        }
    },
    "minimum-stability": "stable"
}
